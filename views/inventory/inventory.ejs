<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>VITA - Stock Inventory</title>

  <script src="https://unpkg.com/htmx.org@1.9.12"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>

  <style>
    :root {
      --primary: #2563eb;
      --primary-dark: #1d4ed8;
      --bg: #ffffff;
      --fg: #0f172a;
      --muted: #64748b;
      --muted-fg: #94a3b8;
      --border: #e2e8f0;
      --card: #ffffff;
      --secondary: #f8fafc;
      --radius: 0.5rem;
    }

    * { margin:0; padding:0; box-sizing:border-box; }
    body { font-family: system-ui, sans-serif; line-height:1.6; color: var(--fg); background: var(--bg); }
    a { text-decoration:none; color:inherit; }

    .container { max-width:1280px; margin:0 auto; padding:0 1rem; }

    header {
      position: sticky; top:0; z-index:50;
      background: rgba(255,255,255,0.95); backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--border);
    }

    .header-inner { display:flex; align-items:center; justify-content:space-between; height:64px; }
    .logo { display:flex; align-items:center; gap:12px; font-weight:800; font-size:1.5rem; }
    .logo img { height:40px; width:auto; }
    nav { display:none; gap:2rem; font-weight:500; }
    nav a:hover { color:var(--primary); }
    .btn { padding:0.75rem 1.5rem; border-radius:var(--radius); font-weight:600; cursor:pointer; transition:all .2s; }
    .btn-ghost:hover { background:var(--secondary); }

    @media(min-width:768px){ nav{ display:flex; } }

    h1 { font-size:2rem; font-weight:900; margin-bottom:2rem; }
    h2 { font-size:2rem; font-weight:800; margin-bottom:1rem; }

    .filter-bar { display:flex; gap:1rem; margin-bottom:2rem; flex-wrap:wrap; }
    .filter-bar input, .filter-bar select { padding:0.5rem 1rem; border:1px solid var(--border); border-radius:var(--radius); }

    .grid { display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap:1.5rem; }

    .card { background: var(--card); border:1px solid var(--border); border-radius: var(--radius); padding:1.5rem; transition: all .3s; }
    .card:hover { box-shadow:0 20px 40px rgba(0,0,0,0.08); transform: translateY(-5px); }
    .card h3 { font-size:1.25rem; font-weight:700; margin-bottom:0.5rem; }
    .card p { color: var(--muted-fg); margin-bottom:0.25rem; }
    .stock { font-weight:700; }

    .stock.low { color:orange; }
    .stock.out { color:red; }
  </style>
</head>
<body>

  <!-- Header -->
  <header>
    <div class="container">
      <div class="header-inner">
        <div class="logo">
          <img src="/assets/vita-logo.png" alt="VITA Logo">
          <span>VITA</span>
        </div>
        <nav>
          <a href="/">Home</a>
          <a href="/about-us">About Us</a>
          <a href="/service">Service</a>
          <a href="/career">Career</a>
          <a href="/contact">Contact</a>
        </nav>
        <div>
          <% if (userName) { %>
            <span>Welcome <%= userName %></span>
          <% } else { %>
            <button class="btn btn-ghost"><a href="/register">Sign Up</a></button>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <!-- Stock Inventory -->
  <section class="container" style="padding:3rem 0;">
    <h1>Stock Inventory</h1>

    <div class="filter-bar">
      <input type="text" name="search" placeholder="Search by product name"
        value="<%= search %>"
        hx-get="/inventory" hx-trigger="keyup changed delay:500ms" hx-target="#inventory-grid" hx-include="[name=category]">

      <select name="category" hx-get="/inventory" hx-trigger="change" hx-target="#inventory-grid" hx-include="[name=search]">
        <option value="">All Categories</option>
        <option value="Material" <%= category === 'Material' ? 'selected' : '' %>>Material</option>
        <option value="Equipment" <%= category === 'Equipment' ? 'selected' : '' %>>Equipment</option>
      </select>
    </div>

    <div id="inventory-grid" class="grid">
      <%- include("./inventory-cards", { products }) %>
    </div>
  </section>

  <script>
    lucide.createIcons();
  </script>
</body>
</html>
